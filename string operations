class Main {
    public static void main(String[] args) {
        String first = "look up";
        String second = "look up";
        String third = "look down";

        //equals()
        boolean result1 = first.equals(second);
        System.out.println("Strings first and second are equal: " + result1);

        boolean result2 = first.equals(third);
        System.out.println("Strings first and third are equal: " + result2);

        //equalsIgnore()
        System.out.println(first.equalsIgnoreCase(second));
        System.out.println(first.equalsIgnoreCase(third));
        System.out.println(second.equalsIgnoreCase(third));

        //startsWith()
        System.out.println(first.startsWith("look"));

        //endsWith()
        System.out.println(first.endsWith("up"));
        System.out.println(second.endsWith("down"));

        //contains()
        boolean result = third.contains("down");
        System.out.println(result);

        //indexof()
        System.out.println("index is:"+first.indexOf('u'));

        //length()
        System.out.println("string length is: "+first.length());

        //substring(1)
        System.out.println("substring is:"+second.substring(0));

        //substring(1,2)
        System.out.println("substring is:"+third.substring(0, 5));

        //toLowerCase()
        System.out.println("Lower case is:"+first.toLowerCase());

        //toUpperCase()
        System.out.println("Upper case is:"+third.toUpperCase());

        //charAt()
        System.out.println("character is at:"+second.charAt(2));

        //lastIndexOf()
        int re = first.lastIndexOf('p');
        System.out.println("last index is:"+re);

        //conact()
        System.out.println("after concatination:"+first.concat(second));

        //isEmpty()
        System.out.println("is string empty?"+third.isEmpty());

        //REPLACE()
        System.out.println("after replacing:"+first.replace('l', 'o'));


    }
}
